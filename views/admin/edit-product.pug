extends ../layouts/main-layout.pug

block title
    title #{title}

block styles
    link(rel="stylesheet", href="/css/main.css")
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main

        form.product-form(action="/admin/edit-product/"+product._id, method="POST")
            div.form-control
                label(for="title") Title
                input(type="text", name="title", value=product.title id="title")
            div.form-control
                label(for="title") Image Url
                input(type="text", name="image", value=product.image id="image")
            div.form-control
                label(for="price") Price
                input(type="number", name="price", value=product.price id="price")
            div.form-control
                label(for="title") Description
                input(type="textarea", name="description", value=product.description id="description")

                button.btn(type="submit") Update Product
